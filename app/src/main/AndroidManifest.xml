<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.test.chinesechess">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/king_red"
        android:label="@string/app_name"
        android:roundIcon="@drawable/king_red"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.test.chinesechess.MainActivity"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.test.chinesechess.Multiplayer"
            android:noHistory="true" />
        <activity android:name="com.example.test.chinesechess.SinglePlayer"
            android:noHistory="true">
        </activity>
    </application>

</manifest>